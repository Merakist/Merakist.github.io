---
layout: page
---
<div class="post">
  <article>
    {% if page.experiences %}
      <div class="table-responsive">
        <table class="table table-sm table-borderless m-0">
          {% assign items = page.experiences | reverse %}
          {% for item in items %}
            <tr class="experience-row" style="border-bottom: 1px solid var(--global-divider-color);">
              <th scope="row" style="width: 22%; color: var(--global-theme-color); vertical-align: top; padding: 1rem 0.75rem 1.5rem 0;">
                {{ item.company }}
              </th>
              <td style="vertical-align: top; padding: 1rem 0.75rem 1.5rem 0;">
                <div style="margin-bottom: 0.75rem;">
                  <span>{{ item.position }}</span>
                  <span style="margin: 0 0.5rem;">·</span>
                  <span><i class="fa-solid fa-location-dot" style="margin-right: 0.3rem;"></i>{{ item.location }}</span>
                  <span style="margin: 0 0.5rem;">·</span>
                  <span>{{ item.date_range }}</span>
                </div>
                {% if item.description %}
                  <div style="margin: 0 0 0.75rem 0;">{{ item.description }}</div>
                {% endif %}
                {% if item.keywords and item.keywords.size > 0 %}
                  <div style="margin-top: 0.25rem;">
                    {% for keyword in item.keywords %}
                      <span style="font-style: italic; margin-right: 0.75rem;">{{ keyword }}</span>
                    {% endfor %}
                  </div>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
        </table>
      </div>
    {% else %}
      {{ content }}
    {% endif %}
  </article>
</div>
